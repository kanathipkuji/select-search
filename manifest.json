{
  "manifest_version": 3,
  "name": "Search Shortcut",
  "description": "Easily search selected text on any site.",
  "version": "1.0",
  "permissions": [
    "contextMenus",
    "activeTab",
    "scripting",
    "storage"
  ],
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "commands": {
    "search-gg": {
      "suggested_key": {
        "default": "Alt+G",
        "mac": "Alt+G",
        "chromeos": "Alt+G"
      },
      "description": "Search the selected text on Google"
    }
  },
  "options_page": "options.html",
  "options_ui": {
    "page": "options.html",
    "open_in_tab": true
  }
}